    "postcss-nested": "^6.2.0",
    "tailwind-scrollbar": "^3.1.0",
    "tippy.js": "^6.3.7",
    "trix": "^2.1.5"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@tailwindcss/typography": "^0.5.15",
